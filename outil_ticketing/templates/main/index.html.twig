{% extends 'base.html.twig' %}

{% block title %}Gestionnaire de tickets
{% endblock %}

{% block body %}
	{% include "_partials/_header.html.twig" %}
	<section class="row mr-3 ml-0">
		{% include "_partials/_sidebar.html.twig" %}

		<div class="col-md-10" id="dashboard">
			<h1>Tableau de bord</h1>

			<!--RANKINGS OF TICKETS AND BEST TECHNICIEN-->
			<div class="ranking">
				<div class="openedTickets">Tickets en cours :
					{{ openedTicketsCount }}</div>
				<div class="closedTickets">Tickets résolus :
					{{ closedTicketsCount }}</div>
				<div class="bestTech">
					Meilleur technicien :
					{% if bestTechnician %}
						{{ bestTechnician.firstName }}
						{{ bestTechnician.lastName }}{% else %}Aucun technicien trouvé
					{% endif %}
				</div>
			</div>

			<!--DASHBOARD OF OPENED TICKETS-->
			<table class="table-responsive">
				<thead>
					<tr>
						<th>Numéro de ticket</th>
						<th>Auteur</th>
						<th>Statut</th>
						<th>Titre</th>
						<th>Contenu</th>
						<th>Date de création</th>
						<th>Modifier</th>
						<th>Répondre</th>
					</tr>
				</thead>
				<tbody>
					{% for ticket in tickets %}
						<!--DISPLAY ONLY OPENED TICKETS-->
						{% if ticket.status == 'Ouvert' %}
							<tr>
								<td>{{ ticket.id }}</td>
								<!--GETTING USER WHO HAS CREATED THE TICKET-->
								<td>{{ ticket.user.firstName }}
									{{ ticket.user.lastName }}</td>
								<td>{{ ticket.status }}</td>
								<td>{{ ticket.title }}</td>
								<td>{{ ticket.content }}</td>
								<td>{{ ticket.createdAt ? ticket.createdAt|date('d-m-Y à H:i') : '' }}</td>
								<td>
									{% if is_granted('ROLE_ADMIN') or ticket.user == app.user %}
										<a href="{{ path('app_tickets_edit', {'id': ticket.id}) }}">Modifier</a>
									{% endif %}
									<a href="{{ path('app_answers_new', {'id': ticket.id}) }}">Répondre</a>
								</td>
							</tr>
						{% endif %}
					{% endfor %}
				</tbody>
			</table>
		</div>
	</section>
	{% include "_partials/_footer.html.twig" %}
{% endblock %}
